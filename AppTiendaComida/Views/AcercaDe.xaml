<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTiendaComida.Views.AcercaDe"
             
             xmlns:viewModels="clr-namespace:AppTiendaComida.ViewModels"
            x:DataType="viewModels:InicioViewModel"
             Title="AcercaDe">
    <ContentPage.Content>
        <ScrollView BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">
            <VerticalStackLayout>
                <Grid ColumnDefinitions="*,Auto,*" RowDefinitions="160, Auto">
                    <!-- Alineado a la parte superior -->
                    <BoxView
                      Grid.ColumnSpan="3"
                      BackgroundColor="Orange"
                      HeightRequest="160"
                      HorizontalOptions="FillAndExpand" />

                    <Button 
                      Text="Volver"             
                      Command="{Binding VolverCommand}" 
                      ImageSource="flecha_i.png"  
                      CommandParameter="0" 
                      BackgroundColor="OrangeRed"    
                      TextColor="White" 
                      CornerRadius="15" 
                      HorizontalOptions="Start"  
                      VerticalOptions="Start"
                      Padding="15"
                      ContentLayout="Left, 10"
                      WidthRequest="93"
                      HeightRequest="5" />

                    <Frame
                      Grid.RowSpan="2"
                      Grid.Column="1"
                      Margin="0,80,0,0"
                      HeightRequest="160"
                      WidthRequest="160"
                      HorizontalOptions="Center" 
                      Padding="0"
                      IsClippedToBounds="True"
                      CornerRadius="80">
                        <Image
                          Aspect="AspectFill"
                          HeightRequest="160"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          Source="user.png" 
                          WidthRequest="160"/>
                    </Frame>
                </Grid>

                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="30">
                    <Label Text= "Nombre del Desarrollador:"
                         HorizontalOptions="Center" 
                         HorizontalTextAlignment="Center" /> 
                    <Label Text= "Selena Mendia"
                         HorizontalOptions="Center" 
                         HorizontalTextAlignment="Center" /> 
                    <Label Text= "Estudiante de Desarrollo de Software"
                         HorizontalOptions="Center" 
                         HorizontalTextAlignment="Center" />
                    <Label Text= "selenamendia1@gmail.com"
                         HorizontalOptions="Center" 
                         HorizontalTextAlignment="Center" />
                  
                </VerticalStackLayout>

                
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>